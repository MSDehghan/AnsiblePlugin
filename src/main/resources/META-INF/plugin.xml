<idea-plugin>
    <id>ir.msdehghan.plugins.ansible</id>
    <name>Ansible</name>
    <vendor email="msdehghan77@gmail.com" url="http://msdehghan.ir">MSDehghan</vendor>

    <description>
        Intellij plugin that helps writing ansible playbooks.
        This plugin can auto-complete all play and task fields.
        Not only Ansible modules are recognized but also all of them have full documentation, right in ypur IDE.
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="yaml" implementationClass="ir.msdehghan.plugins.ansible.AnsibleCompletionContributor"/>
        <documentationProvider implementation="ir.msdehghan.plugins.ansible.AnsiblePlayDocProvider" />
        <psi.referenceContributor language="yaml" implementation="ir.msdehghan.plugins.ansible.AnsibleInventoryReferenceContributor" />
        <json.catalog.exclusion implementation="ir.msdehghan.plugins.ansible.JsonSchemaExclude" />
    </extensions>
</idea-plugin>